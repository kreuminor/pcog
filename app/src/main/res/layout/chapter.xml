<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/colorPrimary"
      android:orientation="horizontal">


    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/arrow2" />

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </include>

    <TextView
        android:id="@+id/book"
        android:layout_width="wrap_content"
        android:layout_height="56dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="15sp"
        android:text="Chapters"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/bmark"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="2sp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_bookmark" />

    <ImageButton
        android:id="@+id/bfont"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="2sp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_font" />

    <ImageButton
        android:id="@+id/bmenu"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_gravity="center"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_chapter" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="45dip"
      android:background="@color/bg_splash"
      android:gravity="center"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/book1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="5sp"
        android:gravity="center_vertical"
        android:text="Book"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/chapter_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="5sp"
        android:gravity="center"
        android:text="Chapter"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />
  </LinearLayout>

  <ListView
      android:id="@id/android:list"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_margin="5sp" />

  <ViewStub
      android:id="@+id/stub_navigation"
      android:layout_width="fill_parent"

      android:layout_height="wrap_content"

      android:layout_gravity="bottom"
      android:layout_marginTop="-51dip"
      android:inflatedId="@+id/panel_navigation"
      android:layout="@layout/navigation_overlay" />

</LinearLayout>
